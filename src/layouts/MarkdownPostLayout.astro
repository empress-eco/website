---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title={frontmatter.title}
  description={frontmatter.description}
  canonical="https://www.lexingtonthemes.com"
  openGraph={{
    url: "https://www.lexingtonthemes.com",
    title: "Title",
    description: "Description",
    images: [
      {
        url: "https://www.lexingtonthemes.com/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.lexingtonthemes.com/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.lexingtonthemes.com/opengraph/social-og.jpg" },
      { url: "https://www.lexingtonthemes.com/opengraph/twitter-og.jpg" },
    ],
    site_name: "YourSitesName",
  }}
  twitter={{
    handle: "@TwitterHandle",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <section class="bg-white">
    <div
      class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24 items-center">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
        <div class="lg:col-span-2">
          <h2 class="inline-flex items-center text-blue-600">
            <ul class="flex flex-wrap gap-2 mt-5" role="list">
              {frontmatter.tags.map((tag) => (
                <a href={`/suite/apps`}>
                  <li 
                    class="flex items-center justify-center h-8 px-4 py-2 text-xs font-semibold text-blue-600 rounded-lg bg-white transition-all"
                    style="box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.1), -4px -4px 8px rgba(255, 255, 255, 0.9);"
                    onmouseover="this.style.boxShadow='inset 4px 4px 8px rgba(0, 0, 0, 0.1), inset -4px -4px 8px rgba(255, 255, 255, 0.9)';"
                    onmouseout="this.style.boxShadow='4px 4px 8px rgba(0, 0, 0, 0.1), -4px -4px 8px rgba(255, 255, 255, 0.9)';"
                  >
                    {tag}
                  </li>
                </a>
              ))}
            </ul>            
          </h2>
          <h2
            class="text-purple-900 font-semibold mt-6 tracking-tighter lg:text-5xl text-3xl">
            {frontmatter.title}
          </h2>
          <p class="prose-lg hover:prose-a:text-blue-500 prose prose-a:font-semibold prose-a:text-blue-300 prose-blockquote:text-blue-600 prose-h3:text-purple-900 text-slate-500 mt-12">{frontmatter.description}</p>
        </div>
        
        <div class="bg-slate-50 rounded-lg p-4 lg:p-8">
          <span>
            <img src="/images/integrations/logo.svg" alt="" style="width: 35px;" />
          </span>
          <div>
            <h3 class="text-lg text-purple-900 mt-3">Author</h3>
            <p class="text-slate-500">{frontmatter.author}</p>
          </div>
          <div>
            <h3 class="text-lg text-purple-900 mt-3">Category</h3>
            <p class="text-slate-500">{frontmatter.tags}</p>
          </div>
          <div>
            <h3 class="text-lg text-purple-900 mt-3">Website</h3>
            <p>
              <a class="text-blue-500 hover:text-blue-600" href="www.empress.eco"
                >www.empress.eco</a
              >
            </p>
          </div>
  
          <div>
            <div class="mt-10 flex">
              <a
                class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-full"
                href="https://calendly.com/empress-eco/empress-demonstration">
                Request a Demo
              </a>
            </div>
          </div>
        </div>
      </div>
      <div
        class="prose-lg hover:prose-a:text-blue-500 prose prose-a:font-semibold prose-a:text-blue-300 prose-blockquote:text-blue-600 prose-h3:text-purple-900 text-slate-500">
        <slot />
      </div>
    </div>
  </section>
  <section class="bg-slate-50">
    <div
      class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24 items-center">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-purple-900 font-semibold tracking-tighter text-3xl">
            Ready to get started?
          </h2>
          <div class="max-w-xl mt-6">
            <p class="text-slate-500">
              Contact us to learn more about our solutions.
            </p>
          </div>
          <div class="mt-10">
            <a
              class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
              href="/contact">
              Contact Empress
            </a>
          </div>
        </div>
        <div class="mx-auto text-left">
          <div>
            <div
              class="gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 lg:grid-cols-2">
              <div>
                <div class="space-y-3">
                  <div class="lg:inline-flex lg:items-center lg:gap-3">
                    <p class="mt-5 font-semibold text-purple-900 lg:mt-0">
                      Get the Latest News
                    </p>
                  </div>
                  <p class="text-sm text-slate-500 mt-5">
                    Find business insights from Empress.
                  </p>
                  <p class="mt-5">
                    <a
                      href="https://blog.empress.eco/"
                      class="text-blue-500 hover:text-blue-600 inline-flex items-center group">
                      Read the Blog
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="w-4 h-4 ml-3 group-hover:translate-x-2 transition duration-500 ease-in-out transform">
                        <path
                          fill-rule="evenodd"
                          d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </a>
                  </p>
                </div>
              </div>
              <div>
                <div class="space-y-3">
                  <div class="lg:inline-flex lg:items-center lg:gap-3">
                    <p class="mt-5 font-semibold text-purple-900 lg:mt-0">
                      Join the Community.
                    </p>
                  </div>
                  <p class="text-sm text-slate-500 mt-5">
                    Grow Your Business. Save the World.
                  </p>
                  <p class="mt-5">
                    <a
                      href="/community"
                      class="text-blue-500 hover:text-blue-600 inline-flex items-center group">
                      Join our Community
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="w-4 h-4 ml-3 group-hover:translate-x-2 transition duration-500 ease-in-out transform">
                        <path
                          fill-rule="evenodd"
                          d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>  
</BaseLayout>
