---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Title"
  description="Descripton"
  canonical="https://www.lexingtonthemes.com"
  openGraph={{
    url: "https://www.lexingtonthemes.com",
    title: "Title}",
    description: "Description",
    images: [
      {
        url: "https://www.lexingtonthemes.com/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.lexingtonthemes.com/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.lexingtonthemes.com/opengraph/social-og.jpg" },
      { url: "https://www.lexingtonthemes.com/opengraph/twitter-og.jpg" },
    ],
    site_name: "YourSitesName",
  }}
  twitter={{
    handle: "@TwitterHandle",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <section>
    <div
      class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-12 items-start">
      <div>
        <div class="items-center grid gap-12">
          <div>
            <h2
              class="text-purple-900 font-semibold text-3xl lg:text-9xl tracking-tighter">
              {frontmatter.title}
            </h2><p class="text-xl text-slate-500 mt-12">
              {frontmatter.description}
            </p>
            <div class="mt-6">
              <div class="flex items-center">
                <div>
                  <img
                    class="inline-block h-9 w-9 rounded-full"
                    src={frontmatter.image.url}
                    alt={frontmatter.image.alt}
                  />
                </div>
                <div class="ml-3">
                  <p
                    class="text-sm font-medium text-slate-500 group-hover:text-purple-900">
                    {frontmatter.author}
                  </p>
                  <p class="text-xs text-slate-500 uppercase">
                    {frontmatter.pubDate.toString().slice(0, 10)}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="bg-white">
    <div class="px-8 max-w-7xl lg:px-24 mx-auto py-12">
      <div
        class="max-w-[40rem] prose-lg hover:prose-a:text-blue-500 prose prose-a:font-semibold prose-a:text-blue-300 prose-blockquote:text-blue-600 prose-h3:text-purple-900 text-slate-500">
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
