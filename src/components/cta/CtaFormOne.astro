<section aria-labelledby="pricing-one" id="pricing-one">
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-36 py-6 my-24">
    <div
      class="mx-auto relative grid grid-cols-1 items-end gap-y-12 lg:static lg:grid-cols-2"
    >
      <div>
        <span class="text-tangaroa-400 uppercase text-xs font-semibold"
          >Cta One</span
        >
        <h2 class="text-tangaroa-500 font-display font-semibold mt-6 text-3xl">
          Ready to get started?
        </h2>
        <div class="max-w-xl mt-6">
          <p class="text-tangaroa-400 text-xl lg:text-2xl">
            Get in touch or create an account.
          </p>
        </div>
        <form class="mt-8 sm:flex">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            required
            class="w-full focus:outline-none border py-2 appearance-none block border-mint focus:bg-white bg-mercury-50 focus:border-mint focus:shadow-xl focus:shadow-mint/20 focus:ring-tangaroa-500 placeholder-mercury-500 px-3 rounded-xl sm:text-sm text-tangaroa-500"
            placeholder="Enter your email"
          />
          <div class="mt-3 rounded-md sm:mt-0 sm:ml-3 sm:flex-shrink-0">
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-xl w-full py-2 px-4 text-sm font-semibold focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 bg-tangaroa-500 text-white hover:bg-orange hover:text-tangaroa-500 active:bg-tangaroa-600 active:text-white focus-visible:outline-tangaroa-900"
              >Notify me</button
            >
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
