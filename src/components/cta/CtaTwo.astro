---

const pageContent = {
  title: "Ready to Get Started with Empress?",
  description: "Begin your journey of growth and innovation. Experience the transformation in every aspect of your business operations with Empress.",
  buttons: [
    { text: "View Pricing", href: "/pricing" },
    { text: "Contact Sales", href: "/contact" }
  ],
  articles: [
    { title: "Streamlined Operations", description: "Revolutionize your workflow with efficient, automated processes for enhanced productivity." },
    { title: "Integrated Solutions", description: "Seamlessly connect and manage all your tools for cohesive business operations." },
    { title: "Advanced Data Management", description: "Leverage our robust database solutions for secure and comprehensive data handling." },
    { title: "Efficient Business Strategies", description: "Implement cutting-edge business techniques for quick and effective rollout." }
  ]
};



---

<section class="bg-white">
  <div class="lg:p-8">
    <div class="bg-purple-900 max-w-7xl mx-auto lg:rounded-3xl">
      <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24">
        <div class="grid grid-cols-1 gap-12 lg:gap-24 items-end md:grid-cols-2">
          <div>
            <h2 class="inline-flex items-center text-white">
              <span class="text-base font-medium tracking-tight">Sign Up Today</span>
            </h2>
            <h2 class="text-white font-semibold tracking-tighter lg:text-5xl mt-6 text-3xl">
              {pageContent.title}
            </h2>
            <p class="text-slate-400 mt-5">
              {pageContent.description}
            </p>
            <div class="mt-10 flex flex-col lg:flex-row gap-6">
              {pageContent.buttons.map(button => (
                <a class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
                   href={button.href}>
                  {button.text}
                </a>
              ))}
            </div>
          </div>
          <div class="lg:mt-0 mt-12">
            <div class="mx-auto">
              <div class="gap-6 gap-y-14 lg:gap-12 grid grid-cols-2">
                {pageContent.articles.map(article => (
                  <article>
                    <div class="space-y-3">
                      <div>
                        <p class="font-semibold text-white">
                          {article.title}
                        </p>
                      </div>
                      <p class="text-sm text-slate-400">
                        {article.description}
                      </p>
                    </div>
                  </article>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
